            transform: translateY(-3px);
            box-shadow: 0 6px 20px rgba(0,0,0,0.25);
            background-color: #ff2e63;
        }

        .section-title {
            text-align: center;
            margin-bottom: 50px;
            font-weight: 700;
            color: var(--bright-purple);
            position: relative;
        }

        .section-title:after {
            content: '';
            display: block;
            width: 100px;
            height: 6px;
            background: linear-gradient(90deg, var(--sunshine), var(--happy-pink));
            margin: 15px auto;
            border-radius: 3px;
        }

        .product-card {
            border: none;
            border-radius: 20px;
            overflow: hidden;
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
            transition: transform 0.4s, box-shadow 0.4s;
            margin-bottom: 30px;
            background: white;
        }

        .product-card:hover {
            transform: translateY(-10px) scale(1.02);
            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.15);
        }

